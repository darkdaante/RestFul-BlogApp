<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %> </div>
    <div class="ui attached ">
        <div class="item">
            <img src="<%= blog.image %>" class="ui centered rounded image" alt="">
            <div class="content">
                <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="content">
                <p><%- blog.body %></p>
            </div>
            <a class="ui basic button pink" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
                <button class="red ui basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

